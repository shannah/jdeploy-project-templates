{
  "bin": {"{{ appName }}": "jdeploy-bundle/jdeploy.js"},
  "author": "",
  "description": "{{ appTitle }}",
  "main": "index.js",
  "preferGlobal": true,
  "repository": "",
  "version": "1.0.0",
  "jdeploy": {
    "jdk": false,
    "javaVersion": "21",
    "javafx": false,
    "title": "{{ appTitle }}",
    "platformBundlesEnabled": true,
    "packageMacX64": "{{ appName }}-mac-x64",
    "packageMacArm64": "{{ appName }}-mac-arm64",
    "packageWinX64": "{{ appName }}-win-x64",
    "packageLinuxX64": "{{ appName }}-linux-x64",
    "packageLinuxArm64": "{{ appName }}-linux-arm64",
    "jar": "composeApp/build/libs/{{ artifactId }}-all.jar",
    "buildCommand": [
      "./gradlew",
      ":composeApp:buildExecutableJar"
    ]
  },
  "dependencies": {
    "command-exists-promise": "^2.0.2",
    "node-fetch": "2.6.7",
    "tar": "^4.4.8",
    "yauzl": "^2.10.0",
    "shelljs": "^0.8.4"
  },
  "license": "ISC",
  "name": "{{ appName }}",
  "files": ["jdeploy-bundle"],
  "scripts": {"test": "echo \"Error: no test specified\" && exit 1"}
}